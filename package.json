{
  "name": "codespin-ai",
  "displayName": "CodeSpin.AI",
  "description": "AI-assisted Code Generation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codespin-ai.generate",
        "title": "CodeSpin.AI: Generate"
      },
      {
        "command": "codespin-ai.init",
        "title": "CodeSpin.AI: Initialize Project"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codespin-ai.generate",
          "group": "codespin-ai"
        },
        {
          "submenu": "codespin-ai.more",
          "group": "codespin-ai"
        }
      ],
      "codespin-ai.more": [
        {
          "command": "codespin-ai.generate",
          "group": "codespin-ai"
        },
        {
          "command": "codespin-ai.init",
          "group": "codespin-ai"
        }
      ]
    },
    "submenus": [
      {
        "id": "codespin-ai.more",
        "label": "CodeSpin AI: More"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codespin-ai",
          "title": "CodeSpin.AI",
          "icon": "resources/codespin-ai-icon.svg"
        }
      ]
    },
    "views": {
      "codespin-ai": [
        {
          "type": "webview",
          "id": "codespin-ai.history",
          "name": "History"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "NODE_ENV=production node ./esbuild.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.2",
    "@types/vscode": "^1.87.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.16.17",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@types/react-router-dom": "^5.3.3",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "codespin": "^0.0.132",
    "gray-matter": "^4.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shiki": "^1.2.3",
    "wouter": "^3.1.0"
  }
}
