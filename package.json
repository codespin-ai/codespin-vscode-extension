{
  "name": "codespin-ai",
  "displayName": "CodeSpin.AI",
  "description": "AI-assisted Code Generation",
  "version": "0.1.70",
  "publisher": "codespin-ai",
  "license": "MIT",
  "icon": "resources/logo.png",
  "repository": {
    "url": "https://github.com/codespin-ai/codespin-vscode-extension/"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "codespin-ai.generate",
        "key": "ctrl+shift+alt+g",
        "when": "editorTextFocus || explorerViewletVisible",
        "mac": "cmd+shift+alt+g"
      }
    ],
    "commands": [
      {
        "command": "codespin-ai.generate",
        "title": "CodeSpin.AI: Start Chatting"
      },
      {
        "command": "codespin-ai.includeFiles",
        "title": "CodeSpin.AI: Include Files"
      },
      {
        "command": "codespin-ai.init",
        "title": "CodeSpin.AI: Initialize Project"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codespin-ai.generate",
          "group": "codespin-ai"
        },
        {
          "command": "codespin-ai.includeFiles",
          "group": "codespin-ai",
          "when": "codespin-ai.enableIncludeFiles"
        },
        {
          "submenu": "codespin-ai.more",
          "group": "codespin-ai"
        }
      ],
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "codespin-ai.generate",
          "group": "codespin-ai"
        }
      ],
      "codespin-ai.more": [
        {
          "command": "codespin-ai.generate",
          "group": "codespin-ai"
        },
        {
          "command": "codespin-ai.init",
          "group": "codespin-ai"
        }
      ]
    },
    "submenus": [
      {
        "id": "codespin-ai.more",
        "label": "CodeSpin.AI: More"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codespin-ai",
          "title": "CodeSpin.AI",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "codespin-ai": [
        {
          "type": "webview",
          "id": "codespin-ai.history",
          "name": "History"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "NODE_ENV=production node ./esbuild.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "glob": "^11.0.0",
    "mocha": "^10.8.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@types/ws": "^8.5.13",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "codespin": "^0.0.230",
    "diff2html": "^3.4.48",
    "gray-matter": "^4.0.3",
    "ignore": "^6.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shiki": "^1.23.1",
    "wouter": "^3.3.5",
    "ws": "^8.18.0"
  }
}
